<h2>Carrito de Compras</h2>

<div id="notifications"></div>

{{#if products.length}}
  <div class="cart-container">
    <ul class="cart-items" id="cart-items">
      {{#each products}}
        <li class="cart-item" data-product-id="{{this._id}}">
          <div class="product-info">
            <h4>{{this.title}}</h4>
            <p>{{this.description}}</p>
            <p><strong>Precio unitario:</strong> $<span class="unit-price">{{this.price}}</span></p>
            <p><strong>Código:</strong> {{this.code}}</p>
          </div>
          <div class="quantity-controls">
            <label>Cantidad:</label>
            <div class="quantity-input">
              <button 
                class="btn-quantity btn-decrease"
                data-cart-id="{{../cartId}}"
                data-product-id="{{this._id}}"
                data-current-quantity="{{this.quantity}}">-</button>
              <span class="quantity" data-product-id="{{this._id}}">{{this.quantity}}</span>
              <button 
                class="btn-quantity btn-increase"
                data-cart-id="{{../cartId}}"
                data-product-id="{{this._id}}"
                data-current-quantity="{{this.quantity}}">+</button>
            </div>
            <p><strong>Subtotal:</strong> $<span class="subtotal" data-product-id="{{this._id}}">{{this.total}}</span></p>
          </div>
          <div class="item-actions">
            <button 
              class="btn-remove"
              data-cart-id="{{../cartId}}"
              data-product-id="{{this._id}}">Eliminar</button>
          </div>
        </li>
      {{/each}}
    </ul>
    
    <div class="cart-summary">
      <h3>Total del Carrito: $<span id="cart-total">{{total}}</span></h3>
      <button id="checkout-btn" class="btn-checkout">Finalizar Compra</button>
      <a href="/" class="btn-continue">Seguir Comprando</a>
    </div>
  </div>
{{else}}
  <div class="empty-cart" id="empty-cart">
    <p>El carrito está vacío.</p>
    <a href="/" class="btn-shop">Ver Productos</a>
  </div>
{{/if}}

<!-- Cargar el JavaScript específico del carrito DESPUÉS del layout -->
<script src="/js/cart.js"></script>

