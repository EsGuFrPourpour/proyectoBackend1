<div class="cart-container">
  <div class="cart-header">
    <h1>üõí Mi Carrito</h1>
    <p class="cart-subtitle">Revisa tus productos antes de finalizar la compra</p>
  </div>

  <!-- Estructura siempre visible para carga din√°mica -->
  <div class="cart-content">
    <div class="cart-items">
      <!-- Los productos se cargar√°n din√°micamente aqu√≠ -->
      {{#each cart.products}}
        <div class="cart-item" data-product-id="{{this.product._id}}">
          <div class="item-image">
            <img src="{{#if this.product.thumbnails.[0]}}{{this.product.thumbnails.[0]}}{{else}}/images/no-image.png{{/if}}" 
                 alt="{{this.product.title}}" 
                 data-fallback="/images/no-image.png">
          </div>
          
          <div class="item-details">
            <h3 class="item-title">{{this.product.title}}</h3>
            <p class="item-description">{{this.product.description}}</p>
            <p class="item-price">${{this.product.price}}</p>
          </div>
          
          <div class="item-quantity">
            <button class="quantity-btn decrease" data-action="decrease-quantity" data-product-id="{{this.product._id}}">-</button>
            <span class="quantity-display">{{this.quantity}}</span>
            <button class="quantity-btn increase" data-action="increase-quantity" data-product-id="{{this.product._id}}">+</button>
          </div>
          
          <div class="item-total">
            <span class="item-subtotal">${{multiply this.product.price this.quantity}}</span>
          </div>
          
          <div class="item-actions">
            <button class="remove-btn" data-action="remove-from-cart" data-product-id="{{this.product._id}}">
              üóëÔ∏è Eliminar
            </button>
          </div>
        </div>
      {{/each}}
    </div>
    
    <div class="cart-summary">
      <div class="summary-card">
        <h3>Resumen del Pedido</h3>
        <div class="summary-line">
          <span>Subtotal:</span>
          <span class="cart-total">$0</span>
        </div>
        <div class="summary-line">
          <span>Env√≠o:</span>
          <span>Gratis</span>
        </div>
        <div class="summary-line total-line">
          <span><strong>Total:</strong></span>
          <span class="cart-total"><strong>$0</strong></span>
        </div>
        
        <div class="checkout-actions">
          <button class="btn-checkout" data-action="checkout">
            üí≥ Proceder al Pago
          </button>
          <a href="/products" class="btn-continue-shopping">
            ‚Üê Seguir Comprando
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Mensaje de carrito vac√≠o oculto por defecto -->
  <div class="empty-cart" style="display: none;">
    <div class="empty-cart-icon">üõí</div>
    <h2>Tu carrito est√° vac√≠o</h2>
    <p>¬°Agrega algunos productos para comenzar!</p>
    <a href="/products" class="btn-start-shopping">
      üõçÔ∏è Comenzar a Comprar
    </a>
  </div>
</div>

<div id="notification" class="notification hidden">
  <span id="notification-message"></span>
</div>

